page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.checkin-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  height: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.header {
  padding: 24rpx 30rpx;
  margin-top: 128rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.form-scroll {
  flex: 1;
  padding: 0 30rpx;
  height: calc(100vh - 180rpx);
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.task-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.task-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.task-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.task-deadline {
  font-size: 24rpx;
  color: #999;
}

.form {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.required {
  color: #ff4d4f;
  font-size: 24rpx;
  margin-left: 8rpx;
}

.date-picker {
  width: 100%;
  height: 90rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  background-color: #f9f9f9;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.textarea {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  background-color: #f9f9f9;
}

.submit-section {
  padding: 30rpx 0 80rpx;
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  border-radius: 45rpx;
  background-color: #1296db;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn[disabled] {
  background-color: #cccccc;
  color: #ffffff;
}

/* 查看模式下的样式 */
.view-mode .textarea,
.view-mode .date-picker {
  background-color: #f0f0f0;
  color: #666;
}

.safe-area-bottom {
  height: 100rpx;
  width: 100%;
}

.checkin-status {
  text-align: center;
  padding: 20rpx;
  background-color: #fff1f0;
  border-radius: 8rpx;
}

.checkin-status.checked {
  background-color: #f6ffed;
}

.status-text {
  font-size: 32rpx;
  color: #ff4d4f;
  display: block;
}

.checkin-status.checked .status-text {
  color: #52c41a;
}

.time {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

.form-scroll {
  flex: 1;
  height: calc(100vh - 400rpx);
}

.form {
  background-color: #fff;
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.form-item {
  margin-bottom: 30rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.input.disabled {
  background-color: #f5f5f5;
  color: #999;
  border-color: #eee;
}

.textarea {
  width: 100%;
  height: 160rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.textarea.disabled {
  background-color: #f5f5f5;
  color: #999;
  border-color: #eee;
}

.radio-group {
  display: flex;
  align-items: center;
}

.radio-label {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
  font-size: 28rpx;
  color: #333;
}

.radio-label:last-child {
  margin-right: 0;
}

.checkin-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 20rpx;
}

.checkin-btn.checked {
  background-color: #ccc;
} 