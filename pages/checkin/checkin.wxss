page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.checkin-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  height: 100%;
  box-sizing: border-box;
  overflow: hidden;
  padding-top: 10rpx;
  width: 100%;
}

.form-scroll {
  flex: 1;
  padding: 20rpx 30rpx 0;
  height: calc(100vh - 150rpx);
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  box-sizing: border-box;
  width: 100%;
}

.form-scroll > view {
  width: calc(100% - 2rpx);
  margin: 0 auto;
}

.task-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e8e8e8;
  box-sizing: border-box;
  width: 100%;
  overflow: hidden;
}

.task-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.task-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.task-deadline {
  font-size: 24rpx;
  color: #999;
}

.form {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e8e8e8;
  box-sizing: border-box;
  width: 100%;
  overflow: hidden;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.required {
  color: #ff4d4f;
  font-size: 24rpx;
  margin-left: 8rpx;
}

.date-picker {
  width: 100%;
  height: 90rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  background-color: #f9f9f9;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.textarea {
  width: 100%;
  height: 160rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.textarea.disabled {
  background-color: #f5f5f5;
  color: #999;
  border-color: #eee;
}

.submit-section {
  padding: 30rpx 0 80rpx;
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  border-radius: 45rpx;
  background-color: #1296db;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn[disabled] {
  background-color: #cccccc;
  color: #ffffff;
}

/* 查看模式下的样式 */
.view-mode .textarea,
.view-mode .date-picker {
  background-color: #f0f0f0;
  color: #666;
}

.safe-area-bottom {
  height: 100rpx;
  width: 100%;
}

.checkin-status {
  text-align: center;
  padding: 20rpx;
  background-color: #fff1f0;
  border-radius: 8rpx;
}

.checkin-status.checked {
  background-color: #f6ffed;
}

.status-text {
  font-size: 32rpx;
  color: #ff4d4f;
  display: block;
}

.checkin-status.checked .status-text {
  color: #52c41a;
}

.time {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

.form-scroll {
  flex: 1;
  height: calc(100vh - 400rpx);
}

.form {
  background-color: #fff;
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.form-item {
  margin-bottom: 30rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  margin-bottom: 10rpx;
  box-sizing: border-box;
  background-color: #f9f9f9;
}

.input.disabled {
  background-color: #f5f5f5;
  color: #999;
  border-color: #eee;
}

.radio-group {
  display: flex;
  align-items: center;
}

.radio-label {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
  font-size: 28rpx;
  color: #333;
}

.radio-label:last-child {
  margin-right: 0;
}

.checkin-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 20rpx;
}

.checkin-btn.checked {
  background-color: #ccc;
}

/* 任务元信息 */
.task-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.task-type, .task-deadline {
  font-size: 24rpx;
  color: #888;
}

/* 图片上传样式 */
.image-uploader {
  display: flex;
  padding: 10rpx 0;
}

.upload-button {
  width: 200rpx;
  height: 200rpx;
  background-color: #f5f5f5;
  border: 1rpx dashed #ccc;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-image-tip {
  width: 200rpx;
  height: 200rpx;
  background-color: #f9f9f9;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-image-tip text {
  font-size: 24rpx;
  color: #999;
}

.upload-icon {
  font-size: 60rpx;
  color: #ccc;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

.image-preview {
  width: 200rpx;
  height: 200rpx;
  position: relative;
  margin-right: 20rpx;
}

.image-preview image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-icon {
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 34rpx;
  font-size: 30rpx;
}

/* 训练动作分隔 */
.form-item {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 添加用户信息提示样式 */
.user-info-tip {
  background-color: #f0f9eb;
  border: 1px solid #e4f2db;
  padding: 15rpx 20rpx;
  margin: 0 30rpx 20rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #67c23a;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-info-tip .username {
  font-weight: bold;
  margin: 0 4rpx;
} 