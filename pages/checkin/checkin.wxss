page {
  background-color: #f5f5f5;
}

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  padding-bottom: 100rpx;
}

.header {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.task-info {
  margin-bottom: 20rpx;
}

.task-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.task-desc {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

.task-deadline {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.checkin-status {
  text-align: center;
  padding: 20rpx;
  background-color: #fff1f0;
  border-radius: 8rpx;
}

.checkin-status.checked {
  background-color: #f6ffed;
}

.status-text {
  font-size: 32rpx;
  color: #ff4d4f;
  display: block;
}

.checkin-status.checked .status-text {
  color: #52c41a;
}

.time {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

.form-scroll {
  flex: 1;
  height: calc(100vh - 400rpx);
}

.form {
  background-color: #fff;
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.input.disabled {
  background-color: #f5f5f5;
  color: #999;
  border-color: #eee;
}

.textarea {
  width: 100%;
  height: 160rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.textarea.disabled {
  background-color: #f5f5f5;
  color: #999;
  border-color: #eee;
}

.radio-group {
  display: flex;
  align-items: center;
}

.radio-label {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
  font-size: 28rpx;
  color: #333;
}

.radio-label:last-child {
  margin-right: 0;
}

.checkin-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 20rpx;
}

.checkin-btn.checked {
  background-color: #ccc;
} 