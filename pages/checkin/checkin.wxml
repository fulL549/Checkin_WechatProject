<view class="container">
  <view class="header">
    <view class="task-info">
      <text class="task-title">{{taskInfo.title}}</text>
      <text class="task-desc">{{taskInfo.description}}</text>
      <text class="task-deadline">截止时间：{{taskInfo.deadline}}</text>
    </view>
    <view class="checkin-status {{hasCheckedIn ? 'checked' : ''}}">
      <text class="status-text">{{hasCheckedIn ? '今日已打卡' : '今日未打卡'}}</text>
      <text class="time" wx:if="{{hasCheckedIn}}">{{checkinTime}}</text>
    </view>
  </view>

  <scroll-view scroll-y class="form-scroll">
    <view class="form">
      <view class="form-item">
        <text class="label">姓名</text>
        <input class="input" placeholder="请输入姓名" bindinput="onNameInput" />
      </view>
      
      <view class="form-item">
        <text class="label">手机号</text>
        <input class="input" type="number" placeholder="请输入手机号" bindinput="onPhoneInput" />
      </view>

      <view class="form-item">
        <text class="label">学号</text>
        <input class="input" placeholder="请输入学号" bindinput="onStudentIdInput" />
      </view>

      <view class="form-item">
        <text class="label">性别</text>
        <radio-group class="radio-group" bindchange="onGenderChange">
          <label class="radio-label">
            <radio value="male" checked="{{gender === 'male'}}" />男
          </label>
          <label class="radio-label">
            <radio value="female" checked="{{gender === 'female'}}" />女
          </label>
        </radio-group>
      </view>

      <view class="form-item">
        <text class="label">地点</text>
        <input class="input" placeholder="请输入打卡地点" bindinput="onLocationInput" />
      </view>

      <view class="form-item">
        <text class="label">内容</text>
        <textarea class="textarea" placeholder="请输入打卡内容" bindinput="onContentInput" />
      </view>
      
      <view class="form-item">
        <text class="label">备注</text>
        <textarea class="textarea" placeholder="请输入备注信息" bindinput="onRemarkInput" />
      </view>

      <view class="form-item">
        <button class="checkin-btn {{hasCheckedIn ? 'checked' : ''}}" 
                bindtap="handleCheckin" 
                disabled="{{hasCheckedIn}}">
          {{hasCheckedIn ? '已打卡' : '完成打卡'}}
        </button>
      </view>
    </view>
  </scroll-view>
</view> 