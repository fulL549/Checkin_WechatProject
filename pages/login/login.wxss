/* login.wxss */
.login-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  background-color: #f5f5f5;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60rpx;
  margin-bottom: 60rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.form {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input {
  height: 80rpx;
  border-bottom: 1rpx solid #ddd;
  font-size: 30rpx;
  padding: 0 10rpx;
}

/* 密码输入框样式 */
.password-container {
  position: relative;
  height: 80rpx;
}

.password-input {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  background-color: transparent;
  pointer-events: none;  /* 禁止点击，点击会穿透到下面的输入框 */
}

.hidden-input {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  opacity: 0;  /* 完全透明 */
}

.submit-btn {
  height: 90rpx;
  margin-top: 40rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  border-radius: 45rpx;
  background-color: #1aad19;
  color: #fff;
}

.toggle-mode {
  margin-top: 30rpx;
  text-align: center;
  font-size: 28rpx;
  color: #0080ff;
}

.footer {
  margin-top: auto;
  text-align: center;
  padding: 20rpx 0;
}

.copyright {
  font-size: 24rpx;
  color: #999;
}

.error-message {
  color: #ff4d4f;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.register-link {
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

.link {
  color: #1296db;
  font-weight: bold;
}

.safe-area-bottom {
  height: env(safe-area-inset-bottom);
} 