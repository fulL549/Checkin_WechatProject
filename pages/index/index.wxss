/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.page-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  height: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.header {
  padding: 10rpx 30rpx;
  margin-top: 44rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.scrollarea {
  flex: 1;
  height: calc(100vh - 90rpx);
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  padding: 0 30rpx 30rpx;
  box-sizing: border-box;
  width: 100%;
}

.task-list {
  margin-bottom: 40rpx;
  width: 100%;
}

.task-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.new-task {
  background-color: #f0fff0; /* 淡绿色背景 */
  border-left: 6rpx solid #1aad19; /* 绿色左边框 */
  animation: pulse 2s ease-in-out;
}

@keyframes pulse {
  0% { box-shadow: 0 0 0 0 rgba(26, 173, 25, 0.4); }
  70% { box-shadow: 0 0 0 10px rgba(26, 173, 25, 0); }
  100% { box-shadow: 0 0 0 0 rgba(26, 173, 25, 0); }
}

.task-item-hover {
  background-color: #f5f5f5;
}

.task-info {
  flex: 1;
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.task-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.task-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  background-color: #e8e8e8;
  color: #666;
  border-radius: 30rpx;
}

.task-status.joined {
  background-color: #1aad19;
  color: #fff;
}

.task-status.expired {
  background-color: #999;
  color: #fff;
}

.task-status.new {
  background-color: #ff9500;
  color: #fff;
}

.task-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.task-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.task-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}

.action-btn {
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: 500;
}

.join-btn {
  background-color: #1296db;
  color: white;
}

.action-btn.disabled {
  background-color: #f0f0f0;
  color: #999;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态样式 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f0f0f0;
  border-radius: 50%;
  border-top-color: #1296db;
  margin-right: 16rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 列表底部样式 */
.end-state {
  text-align: center;
  padding: 30rpx 0;
}

.end-text {
  font-size: 24rpx;
  color: #999;
}

/* 浮动按钮 */
.floating-btn {
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #1296db;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(18, 150, 219, 0.3);
  z-index: 100;
}

.plus-icon {
  color: white;
  font-size: 60rpx;
  font-weight: bold;
  line-height: 1;
}

/* 添加登录提示界面的样式 */
.login-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  min-height: 60vh;
  background-color: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.login-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 40rpx;
}

.login-tip {
  font-size: 34rpx;
  color: #666;
  margin-bottom: 50rpx;
  text-align: center;
}

.login-btn {
  width: 80%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: #1aad19;
  color: white;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 20rpx;
}
