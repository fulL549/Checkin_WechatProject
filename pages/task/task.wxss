page {
  background-color: #f5f5f5;
  min-height: 100vh;
  height: 100%;
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  position: relative;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.header {
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.form-scroll {
  flex: 1;
  height: calc(100vh - 220rpx); /* 调整高度，为底部按钮和标题预留空间 */
  overflow-y: auto;
  -webkit-overflow-scrolling: touch; /* 增强iOS滑动流畅度 */
  position: relative;
}

.task-form {
  width: 100%;
}

.form {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.required {
  color: #ff4d4f;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #f9f9f9;
}

.textarea {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #f9f9f9;
}

.picker {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #f9f9f9;
  display: flex;
  align-items: center;
  color: #333;
}

.picker.placeholder {
  color: #999;
}

.submit-container {
  width: 100%;
  padding: 20rpx 0;
  background-color: #f5f5f5;
  position: relative;
  z-index: 10;
}

.submit-btn {
  background-color: #1aad19;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  width: 100%;
}

.submit-btn[disabled] {
  background-color: #9fd29f;
  color: rgba(255, 255, 255, 0.8);
}

.safe-area-bottom {
  height: 80rpx;
  width: 100%;
}

/* 新增样式 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #e8e8e8;
  margin-bottom: 30rpx;
}

.time-container {
  display: flex;
  justify-content: space-between;
}

.time-item {
  width: 48%;
}

.tips {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  line-height: 1.4;
}

.tips.warning {
  color: #f56c6c;
} 