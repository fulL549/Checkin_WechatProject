page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.task-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  height: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.header {
  padding: 24rpx 30rpx;
  margin-top: 128rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.form-scroll {
  flex: 1;
  padding: 0 30rpx;
  height: calc(100vh - 180rpx);
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.form {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.required {
  color: #ff4d4f;
}

.input, .textarea, .picker {
  width: 100%;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  background-color: #f9f9f9;
}

.input {
  height: 80rpx;
}

.textarea {
  height: 200rpx;
  width: 100%;
}

.picker {
  height: 80rpx;
}

.placeholder {
  color: #999;
}

.submit-section {
  padding: 40rpx 0;
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  background-color: #1296db;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn-hover {
  opacity: 0.8;
}

.safe-area-bottom {
  height: 100rpx;
  width: 100%;
} 