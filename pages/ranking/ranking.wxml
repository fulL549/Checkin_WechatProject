<view class="container">
  <view class="header">
    <text class="title">排行榜</text>
  </view>

  <scroll-view scroll-y class="content-scroll">
    <view class="ranking-list">
      <!-- 前三名特殊样式 -->
      <view class="top-three">
        <!-- 第二名 -->
        <view class="top-item second">
          <view class="rank-number">2</view>
          <image class="avatar" src="/images/avatar.png" mode="aspectFill"></image>
          <text class="name">{{rankingList[1].name}}</text>
          <text class="score">{{rankingList[1].checkins}}次</text>
        </view>
        <!-- 第一名 -->
        <view class="top-item first">
          <view class="rank-number">1</view>
          <image class="avatar" src="/images/avatar.png" mode="aspectFill"></image>
          <text class="name">{{rankingList[0].name}}</text>
          <text class="score">{{rankingList[0].checkins}}次</text>
        </view>
        <!-- 第三名 -->
        <view class="top-item third">
          <view class="rank-number">3</view>
          <image class="avatar" src="/images/avatar.png" mode="aspectFill"></image>
          <text class="name">{{rankingList[2].name}}</text>
          <text class="score">{{rankingList[2].checkins}}次</text>
        </view>
      </view>

      <!-- 其他排名 -->
      <view class="other-ranking">
        <view class="ranking-item" wx:for="{{rankingList}}" wx:key="index" wx:if="{{index > 2}}">
          <view class="rank-number">{{index + 1}}</view>
          <image class="avatar" src="/images/avatar.png" mode="aspectFill"></image>
          <view class="user-info">
            <text class="name">{{item.name}}</text>
            <text class="student-id">{{item.studentId}}</text>
          </view>
          <text class="score">{{item.checkins}}次</text>
        </view>
      </view>
    </view>
  </scroll-view>
</view> 