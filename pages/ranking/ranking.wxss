page {
  background-color: #f5f5f5;
}

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  padding-bottom: 100rpx;
}

.header {
  background-color: #fff;
  padding: 30rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.content-scroll {
  flex: 1;
  height: calc(100vh - 200rpx);
}

.ranking-list {
  padding: 20rpx;
}

.top-three {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  padding: 40rpx 0;
  margin-bottom: 30rpx;
}

.top-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 20rpx;
  position: relative;
}

.top-item.first {
  transform: scale(1.1);
}

.top-item .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 16rpx;
}

.top-item.first .avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
}

.top-item .rank-number {
  position: absolute;
  top: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  color: #fff;
}

.top-item.first .rank-number {
  background-color: #FFD700;
}

.top-item.second .rank-number {
  background-color: #C0C0C0;
}

.top-item.third .rank-number {
  background-color: #CD7F32;
}

.top-item .name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.top-item .score {
  font-size: 24rpx;
  color: #666;
}

.other-ranking {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.ranking-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.ranking-item:last-child {
  border-bottom: none;
}

.ranking-item .rank-number {
  width: 40rpx;
  height: 40rpx;
  background-color: #f5f5f5;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #666;
  margin-right: 20rpx;
}

.ranking-item .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
}

.ranking-item .user-info {
  flex: 1;
}

.ranking-item .name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.ranking-item .student-id {
  font-size: 24rpx;
  color: #999;
}

.ranking-item .score {
  font-size: 28rpx;
  color: #07c160;
  font-weight: bold;
} 