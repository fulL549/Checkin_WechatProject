page {
  background-color: #f5f5f5;
  height: 100vh;
  width: 100%;
  overflow-x: hidden;
}

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  width: 100%;
  overflow-x: hidden;
  box-sizing: border-box;
}

.content-scroll {
  flex: 1;
  height: calc(100vh - 44px);
  width: 100%;
  box-sizing: border-box;
}

.settings-form {
  background-color: #fff;
  border-radius: 12rpx;
  margin: 30rpx 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.form-group {
  margin-bottom: 40rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.avatar-group {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-picker {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  border: 1rpx solid #e0e0e0;
  margin-bottom: 16rpx;
}

.change-text {
  font-size: 24rpx;
  color: #1296db;
}

.radio-group {
  display: flex;
  flex-direction: row;
}

.radio-label {
  display: flex;
  align-items: center;
  margin-right: 60rpx;
  font-size: 28rpx;
  color: #333;
}

.picker-view {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.button-group {
  padding: 30rpx 20rpx;
}

.save-button {
  background-color: #1296db;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
}

.save-button::after {
  border: none;
}

.safe-area-bottom {
  height: env(safe-area-inset-bottom);
} 