page {
  background-color: #f5f5f5;
  height: 100vh;
}

.manager-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  padding-bottom: 50rpx;
}

.header {
  background-color: #fff;
  padding: 10rpx 30rpx;
  text-align: center;
  margin-bottom: 10rpx;
  margin-top: 44rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.content-scroll {
  flex: 1;
  height: calc(100vh - 110rpx);
  overflow-y: auto;
  width: 100%;
  box-sizing: border-box;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 28rpx;
}

.task-list {
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.task-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.task-info {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.task-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.task-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.task-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.task-actions {
  display: flex;
  border-top: 1rpx solid #f5f5f5;
}

.action-btn {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  font-size: 28rpx;
}

.action-btn.edit {
  color: #1296db;
  border-right: 1rpx solid #f5f5f5;
}

.action-btn.delete {
  color: #ff4d4f;
}

.add-task {
  padding: 40rpx 20rpx;
}

.add-btn {
  background-color: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 0;
  border-radius: 12rpx;
}

.safe-area-bottom {
  height: env(safe-area-inset-bottom);
  width: 100%;
} 