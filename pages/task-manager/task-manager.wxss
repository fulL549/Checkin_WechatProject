page {
  background-color: #f5f5f5;
  height: 100vh;
}

.manager-container {
  min-height: 100vh;
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
  padding-bottom: 50rpx;
}

.header {
  background-color: #fff;
  padding: 15rpx 30rpx;
  text-align: center;
  margin-bottom: 10rpx;
  z-index: 10;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.content-scroll {
  flex: 1;
  height: calc(100vh - 140rpx);
  width: 100%;
  box-sizing: border-box;
  -webkit-overflow-scrolling: touch;
  padding-bottom: 30rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 28rpx;
}

.task-list {
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.task-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.task-info {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.task-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.task-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.task-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.task-actions {
  display: flex;
  border-top: 1rpx solid #f5f5f5;
}

.action-btn {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  font-size: 28rpx;
}

.action-btn.edit {
  color: #1296db;
  border-right: 1rpx solid #f5f5f5;
}

.action-btn.delete {
  color: #ff4d4f;
}

.add-task {
  padding: 40rpx 20rpx;
}

.add-btn {
  background-color: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 0;
  border-radius: 12rpx;
}

.safe-area-bottom {
  height: env(safe-area-inset-bottom, 20px);
  width: 100%;
  background-color: #f5f5f5;
}

.tasks-container {
  padding: 20rpx;
  padding-bottom: 50rpx;
}

.task-card {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
}

.modified-task {
  background-color: #fffef0;
  border: 1rpx solid #ffd980;
  animation: highlight-pulse 2s ease-in-out;
}

@keyframes highlight-pulse {
  0% { box-shadow: 0 0 0 0 rgba(255, 193, 7, 0.4); }
  70% { box-shadow: 0 0 0 10px rgba(255, 193, 7, 0); }
  100% { box-shadow: 0 0 0 0 rgba(255, 193, 7, 0); }
}

.modified-tag {
  position: absolute;
  top: 0;
  right: 0;
  background-color: #ff9500;
  color: #fff;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  transform: rotate(45deg) translate(20rpx, -10rpx);
  transform-origin: top right;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.task-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.task-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  text-align: center;
}

.action-btn.edit {
  background-color: #e6f7ff;
  color: #1890ff;
}

.action-btn.delete {
  background-color: #fff1f0;
  color: #ff4d4f;
}

.task-content {
  padding: 10rpx 0;
}

.task-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.task-meta {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.meta-item {
  display: flex;
  font-size: 26rpx;
  line-height: 1.6;
}

.meta-label {
  color: #999;
  width: 150rpx;
  flex-shrink: 0;
}

.meta-value {
  color: #333;
  font-weight: 500;
} 